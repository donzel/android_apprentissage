<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="blueacground" >
        <item name="android:background">@color/background</item>      
        
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="smileys">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_width">30dip</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:layout_below">@+id/italique</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:layout_marginLeft">25dip</item>
    </style>

    <style name="chooseColor">
        <item name="android:layout_below">@+id/textsmiley</item>
        <item name="android:layout_marginLeft">30dip</item>
        
    </style>
    
    <style name="hideButton" >
        <item name="android:background">@drawable/a9p_09_11_00954</item>        
    </style> 

    <style name="Divider">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">2dp</item>
    <item name="android:background">?android:attr/listDivider</item>
    
    
</style>
</resources>